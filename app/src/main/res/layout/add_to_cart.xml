<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:paddingBottom="5dp"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.cardview.widget.CardView
        android:id="@+id/list_CV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/cart_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:id="@+id/image_CV"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" >

                <ImageView
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:id="@+id/Product_IV"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/pedigree"
                    />

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:weightSum="5"
                android:layout_marginTop="3dp"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/product_name_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:autoSizeMaxTextSize="100dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Name of the products"
                    />

<!--                <TextView-->
<!--                    android:id="@+id/Desc_TV"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_below="@+id/product_name_TV"-->
<!--                    android:gravity="center"-->
<!--                    android:layout_marginTop="8dp"-->
<!--                    android:textColor="@color/black"-->
<!--                    android:text="szjsadsajsajdjsaldjsa"-->
<!--                    android:textSize="13sp"-->
<!--                    />-->

                <LinearLayout
                    android:layout_height="40dp"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="3dp"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/product_name_TV"
                        android:layout_centerInParent="true"
                        android:text="â‚¹"
                        android:padding="2dp"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        tools:ignore="SpeakableTextPresentCheck" />




                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:inputType="number"
                        android:text="111"
                        android:textColor="@color/black"
                        android:textSize="18sp"

                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_height="40dp"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                   android:layout_marginStart="3dp"
                    android:weightSum="3">

                    <Button
                        android:id="@+id/plus_button"
                        android:layout_height="wrap_content"
                        android:layout_width="40dp"
                        android:text="+"


                        />


<!--                    <button text='+'/>-->
<!--                    <textView text='0'/>-->
<!--                    <button text='-'/>-->

                    <TextView
                        android:id="@+id/qty_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/product_name_TV"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="0"

                        android:padding="2dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        tools:ignore="SpeakableTextPresentCheck" />


                    <Button
                        android:id="@+id/minus_button"
                        android:layout_height="wrap_content"
                        android:layout_width="40dp"
                        android:text="-"



                        />

<!--                    <TextView-->
<!--                        android:id="@+id/Qty"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginStart="2dp"-->
<!--                        android:inputType="number"-->
<!--                        android:text="111"-->
<!--                        android:textColor="@color/black"-->
<!--                        android:textSize="16sp"-->


<!--                        />-->



                </LinearLayout>

                <Button
                    android:layout_gravity="center"
                    android:id="@+id/removeItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="REMOVE "
                    android:textColor="@color/black"

                    android:background="@color/white"
                    android:textSize="16sp"

                    />





            </LinearLayout>





        </LinearLayout>











    </androidx.cardview.widget.CardView>















